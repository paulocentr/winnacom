{
  "manifest_version": 3,
  "name": "Plinko Tracker",
  "version": "1.4",
  "description": "Track winna plinko results for fairness audit",
  "permissions": ["storage", "webRequest", "scripting", "activeTab"],
  "host_permissions": ["*://*.winna.com/*", "*://originals.winna.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.winna.com/*", "*://originals.winna.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    }
  ]
}
